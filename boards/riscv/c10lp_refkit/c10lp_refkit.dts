/dts-v1/;

#include <riscv32-litex-vexriscv.dtsi>

/ {

  model = "Custom C10LP RefKit SoC";
  compatible = "custom,c10lp_refkit_soc";

  chosen {
    zephyr,console = &uart0;
    zephyr,shell-uart = &uart0;
    zephyr,sram = &ram0;
  };

  aliases {
    led0 = &bar_led_0;
  };

  ram0: memory@40000000 {
    device_type = "memory";
    reg = <0x40000000 0x02000000>;
  };

  led_bar_gpio: gpio@e0004000 {
    compatible = "litex,gpio";
    reg = <0xe0004000 0x4>;
    reg-names = "control";
    ngpios = <4>;
    label = "gpio_leds";
    port-is-output;
    status = "disabled";
    gpio-controller;
    #gpio-cells = <2>;
    status = "okay";
  };

  bar_leds {
    compatible = "gpio-leds";
    bar_led_0: led_0 {
      gpios = <&led_bar_gpio 0 0>;
      label = "Bar LED 0";
    };
  };

};

&uart0 {
  status = "okay";
  current-speed = <115200>;
};

&timer0 {
  status = "okay";
};

